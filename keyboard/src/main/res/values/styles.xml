<resources>

    <style name="KeyboardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">250dp</item>

        <item name="android:paddingHorizontal">10dp</item>
        <item name="android:paddingVertical">10dp</item>
    </style>

    <style name="KeyboardButtonBasic">
        <item name="android:layout_marginHorizontal">4dp</item>
        <item name="android:layout_marginVertical">5dp</item>

        <item name="android:foreground">?android:selectableItemBackground</item>
        <item name="android:background">@drawable/bg_button_keyboard_grey</item>
    </style>

    <style name="KeyboardButtonBasicBlue">
        <item name="android:layout_marginHorizontal">4dp</item>
        <item name="android:layout_marginVertical">5dp</item>

        <item name="android:foreground">?android:selectableItemBackground</item>
        <item name="android:background">@drawable/bg_button_keyboard_blue</item>
    </style>

    <style name="KeyboardButtonSymbol">
        <item name="android:layout_marginHorizontal">4dp</item>
        <item name="android:layout_marginVertical">5dp</item>

        <item name="android:textSize">25sp</item>
        <item name="android:foreground">?android:selectableItemBackground</item>
        <item name="android:background">@drawable/bg_button_keyboard_white</item>
    </style>

    <style name="KeyboardButtonLetter">
        <item name="android:layout_marginHorizontal">2dp</item>
        <item name="android:layout_marginVertical">5dp</item>

        <item name="android:textSize">25sp</item>
        <item name="android:foreground">?android:selectableItemBackground</item>
        <item name="android:background">@drawable/bg_button_keyboard_white</item>
    </style>

    <style name="KeyboardButtonLetterSpecial">
        <item name="android:layout_marginHorizontal">2dp</item>
        <item name="android:layout_marginVertical">5dp</item>

        <item name="android:foreground">?android:selectableItemBackground</item>
        <item name="android:background">@drawable/bg_button_keyboard_grey</item>
    </style>

    <style name="KeyboardButtonIcon">
        <item name="android:layout_marginHorizontal">4dp</item>
        <item name="android:layout_marginVertical">5dp</item>

        <item name="android:foreground">?android:selectableItemBackground</item>
        <item name="android:background">@drawable/bg_button_keyboard_white</item>
    </style>

</resources>
