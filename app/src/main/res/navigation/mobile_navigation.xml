<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/mobile_navigation"
            app:startDestination="@+id/nav_catalog"
            tools:ignore="UnusedNavigation">

    <fragment
            android:id="@+id/nav_catalog"
            android:name="space.lopatkin.spb.helpboardgamecard.ui.catalog.CatalogFragment"
            android:label="@string/menu_catalog"
            tools:layout="@layout/fragment_catalog">

        <action
                android:id="@+id/action_nav_catalog_to_nav_addcard"
                app:destination="@id/nav_addcard"/>
        <action android:id="@+id/action_nav_catalog_to_nav_helpcard"
                app:destination="@+id/nav_helpcard"/>
        <argument android:name="helpcard"
                  app:argType="space.lopatkin.spb.helpboardgamecard.model.Helpcard"
                  app:nullable="true"
                  android:defaultValue="@null"/>

    </fragment>

    <fragment
            android:id="@+id/nav_addcard"
            android:name="space.lopatkin.spb.helpboardgamecard.ui.addcard.AddcardEditcardFragment"
            android:label="@string/menu_addcard"
            tools:layout="@layout/fragment_addcard">

        <action
                android:id="@+id/action_nav_addcard_to_nav_catalog"
                app:destination="@+id/nav_catalog"/>
        <argument android:name="helpcard" app:argType="space.lopatkin.spb.helpboardgamecard.model.Helpcard"
                  app:nullable="true" android:defaultValue="@null"/>
    </fragment>

    <fragment
            android:id="@+id/nav_favorites"
            android:name="space.lopatkin.spb.helpboardgamecard.ui.favorites.FavoritesFragment"
            android:label="@string/menu_favorites"
            tools:layout="@layout/fragment_favorites"/>

    <fragment
            android:id="@+id/nav_share"
            android:name="space.lopatkin.spb.helpboardgamecard.ui.share.ShareFragment"
            android:label="@string/menu_share"
            tools:layout="@layout/fragment_share"/>

    <fragment
            android:id="@+id/nav_helpcard"
            android:name="space.lopatkin.spb.helpboardgamecard.ui.helpcard.HelpcardFragment"
            android:label="helpcard"
            tools:layout="@layout/fragment_helpcard">


        <argument android:name="helpcard" app:argType="space.lopatkin.spb.helpboardgamecard.model.Helpcard"
                  app:nullable="true" android:defaultValue="@null"/>


    </fragment>
    <argument android:defaultValue="default" android:name="currentHelpcard"/>


</navigation>