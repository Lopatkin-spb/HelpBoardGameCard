<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/mobile_navigation"
            app:startDestination="@+id/nav_helpcard">

    <fragment
            android:id="@+id/nav_helpcard"
            android:name="space.lopatkin.spb.helpboardgamecard.ui.helpcard.HelpCardFragment"
            android:label="@string/menu_helpcard"
            tools:layout="@layout/fragment_helpcard">

        <action
                android:id="@+id/action_nav_helpcard_to_nav_newcard"
                app:destination="@id/nav_addcard"/>
    </fragment>

    <fragment
            android:id="@+id/nav_addcard"
            android:name="space.lopatkin.spb.helpboardgamecard.ui.addcard.AddCardFragment"
            android:label="@string/menu_addcard"
            tools:layout="@layout/fragment_addcard">

        <action
                android:id="@+id/action_nav_addcard_to_nav_helpcard"
                app:destination="@id/nav_helpcard"/>
    </fragment>

    <fragment
            android:id="@+id/nav_settings"
            android:name="space.lopatkin.spb.helpboardgamecard.ui.settings.SettingsFragment"
            android:label="@string/menu_settings"
            tools:layout="@layout/fragment_settings">

        <action
                android:id="@+id/action_nav_settings_to_nav_newcard"
                app:destination="@id/nav_addcard"/>
    </fragment>

    <fragment
            android:id="@+id/nav_share"
            android:name="space.lopatkin.spb.helpboardgamecard.ui.share.ShareFragment"
            android:label="@string/menu_share"
            tools:layout="@layout/fragment_share"/>

</navigation>