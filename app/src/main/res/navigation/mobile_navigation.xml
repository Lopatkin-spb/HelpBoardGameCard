<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/mobile_navigation"
            app:startDestination="@+id/nav_catalog"
            tools:ignore="UnusedNavigation">

    <fragment
            android:id="@+id/nav_catalog"
            android:name="space.lopatkin.spb.helpboardgamecard.ui.catalog.CatalogFragment"
            android:label="@string/menu_catalog"
            tools:layout="@layout/fragment_catalog">

        <action
                android:id="@+id/action_nav_helpcard_to_nav_newcard"
                app:destination="@id/nav_addcard"/>
        <argument android:name="messageNewTitle" app:argType="string" android:defaultValue="default"/>
        <argument android:name="messageNewDescription" app:argType="string" android:defaultValue="default"/>
        <argument android:name="messageNewPriority" app:argType="integer" android:defaultValue="1"/>
        <argument android:name="id" app:argType="integer" android:defaultValue="-1"/>
    </fragment>

    <fragment
            android:id="@+id/nav_addcard"
            android:name="space.lopatkin.spb.helpboardgamecard.ui.addcard.AddcardEditcardFragment"
            android:label="@string/menu_addcard"
            tools:layout="@layout/fragment_addcard">

        <action
                android:id="@+id/action_nav_addcard_to_nav_helpcard"
                app:destination="@id/nav_catalog"/>
        <argument android:name="messageEditId" app:argType="integer" android:defaultValue="-1"/>
        <argument android:name="messageEditTitle" app:argType="string" android:defaultValue="default"/>
        <argument android:name="messageEditDescription" app:argType="string" android:defaultValue="default"/>
        <argument android:name="messageEditPriority" app:argType="integer" android:defaultValue="1"/>
    </fragment>

    <fragment
            android:id="@+id/nav_favorites"
            android:name="space.lopatkin.spb.helpboardgamecard.ui.favorites.FavoritesFragment"
            android:label="@string/menu_favorites"
            tools:layout="@layout/fragment_favorites">

        <action
                android:id="@+id/action_nav_settings_to_nav_newcard"
                app:destination="@id/nav_addcard"/>
    </fragment>

    <fragment
            android:id="@+id/nav_share"
            android:name="space.lopatkin.spb.helpboardgamecard.ui.share.ShareFragment"
            android:label="@string/menu_share"
            tools:layout="@layout/fragment_share"/>

</navigation>