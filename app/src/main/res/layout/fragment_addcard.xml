<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:padding="16dp"
              tools:context=".ui.addcard.AddcardEditcardFragment">

    <EditText
            android:id="@+id/edit_text_title"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="@string/title"
            android:inputType="textCapWords"
            android:textSize="50dp"
            android:autofillHints=""/>

    <EditText
            android:id="@+id/edit_text_victory_condition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="victory condition"
            android:inputType="textMultiLine"
            android:textSize="30dp"
            android:autofillHints=""/>

    <EditText
            android:id="@+id/edit_text_end_game"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="end game"
            android:inputType="textMultiLine"
            android:autofillHints=""/>

    <EditText
            android:id="@+id/edit_text_preparation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="preparation"
            android:inputType="textMultiLine"
            android:autofillHints=""/>


    <EditText
            android:id="@+id/edit_text_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/description"
            android:inputType="textMultiLine"
            android:autofillHints=""/>

    <EditText
            android:id="@+id/edit_text_player_turn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="player turn"
            android:inputType="textMultiLine"
            android:textSize="30dp"
            android:autofillHints=""/>

    <EditText
            android:id="@+id/edit_text_effects"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="effects"
            android:inputType="textMultiLine"
            android:autofillHints=""/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/priority"
            android:textAppearance="@android:style/TextAppearance.Medium" />

    <NumberPicker
            android:id="@+id/number_picker_priority"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

</LinearLayout>