<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        android:layout_marginBottom="8dp"
>


    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorGreyCardBackground"
            android:padding="8dp">

        <TextView
                android:id="@+id/text_view_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@id/text_view_item_priority"
                android:textColor="@color/colorTextWhite"
                android:ellipsize="end"
                android:textSize="40dp"
                android:maxLines="2"
                android:text="@string/hint_title"/>

        <TextView
                android:id="@+id/text_view_item_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_view_item_title"
                android:text="@string/hint_description"
                android:textColor="@color/colorTextWhite"
                android:textSize="25dp"

                android:layout_alignParentStart="true"
                android:layout_marginStart="30dp"/>


        <!--                android:theme="@style/checkboxStyle"-->


        <!--        <RatingBar android:layout_width="wrap_content"-->
        <!--                   android:layout_height="wrap_content"-->
        <!--                   android:numStars="2"-->
        <!--                   android:stepSize="1"-->
        <!--                   android:id="@+id/rating_bar"-->
        <!--                   android:layout_alignParentEnd="true"-->
        <!--                   android:layout_marginEnd="200dp"-->
        <!--                   android:layout_marginTop="4dp"-->
        <!--                   android:layout_alignParentTop="true"/>-->

        <CheckBox
                android:id="@+id/button_view_item_favorites"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="44dp"
                android:layout_alignParentTop="true"
                android:scaleX="1.8"
                android:scaleY="1.8"
                android:layout_marginTop="3dp"/>

        <CheckBox
                android:id="@+id/checkbox_view_item_lock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/checkbox_selector_lock"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="48dp"
                android:textColor="@color/colorTextWhite"
                android:layout_alignParentTop="true"
                android:scaleX="2"
                android:scaleY="2"
                android:layout_marginTop="54dp"/>

        <TextView
                android:id="@+id/text_view_item_priority"
                android:layout_width="20dp"
                android:layout_height="32dp"
                android:layout_alignParentEnd="true"
                android:text="@string/_1"
                android:textSize="25dp"
                android:textColor="@color/colorTextWhite"

                android:layout_marginEnd="15dp"
                android:layout_marginTop="23dp"
                android:layout_alignParentTop="true"/>

        <ImageView
                android:id="@+id/image_view_item_navigate_next"
                android:layout_width="50dp"
                android:layout_height="70dp"
                android:scaleY="2"
                android:layout_marginStart="16dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_navigate_next"
                android:layout_marginEnd="-15dp"
                android:textColor="@color/colorTextWhite"

                android:contentDescription="edit"
                android:layout_marginTop="7dp"
                android:layout_alignParentTop="true"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>