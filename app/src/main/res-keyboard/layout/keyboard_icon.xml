<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/container_keyboard_icon"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:paddingVertical="10dp"
        android:visibility="visible"
        android:background="@color/colorGrey">

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_row_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.33"/>

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_row_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.66"/>

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_column_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.14"/>

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_column_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.28"/>

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_column_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.42"/>

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_column_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.56"/>

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_column_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.7"/>

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_column_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.84"/>


    <ImageButton
            android:id="@+id/action_chair"
            style="@style/KeyboardButtonIcon"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/ic_keyboard_baseline_chair_34"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="@id/guideline_column_1"
            app:layout_constraintBottom_toBottomOf="@id/guideline_row_1"/>

    <ImageButton
            android:id="@+id/action_breakfast"
            style="@style/KeyboardButtonIcon"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/ic_keyboard_baseline_free_breakfast_34"

            app:layout_constraintStart_toStartOf="@id/guideline_column_1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="@id/guideline_column_2"
            app:layout_constraintBottom_toBottomOf="@id/guideline_row_1"/>

    <ImageButton
            android:id="@+id/action_stop"
            style="@style/KeyboardButtonIcon"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/ic_keyboard_baseline_pan_tool_34"

            app:layout_constraintStart_toStartOf="@id/guideline_column_2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="@id/guideline_column_3"
            app:layout_constraintBottom_toBottomOf="@id/guideline_row_1"/>

    <ImageButton
            android:id="@+id/action_smartphone"
            style="@style/KeyboardButtonIcon"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/ic_keyboard_baseline_smartphone_34"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/guideline_row_1"
            app:layout_constraintEnd_toEndOf="@id/guideline_column_1"
            app:layout_constraintBottom_toBottomOf="@id/guideline_row_2"/>

    <ImageButton
            android:id="@+id/action_volume"
            style="@style/KeyboardButtonIcon"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/ic_keyboard_baseline_volume_off_34"

            app:layout_constraintStart_toStartOf="@id/guideline_column_1"
            app:layout_constraintTop_toTopOf="@id/guideline_row_1"
            app:layout_constraintEnd_toEndOf="@id/guideline_column_2"
            app:layout_constraintBottom_toBottomOf="@id/guideline_row_2"/>

    <ImageButton
            android:id="@+id/action_right"
            style="@style/KeyboardButtonIcon"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/ic_keyboard_baseline_east_34"

            app:layout_constraintStart_toStartOf="@id/guideline_column_2"
            app:layout_constraintTop_toTopOf="@id/guideline_row_1"
            app:layout_constraintEnd_toEndOf="@id/guideline_column_3"
            app:layout_constraintBottom_toBottomOf="@id/guideline_row_2"/>

    <ImageButton
            android:id="@+id/action_down"
            style="@style/KeyboardButtonIcon"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/ic_keyboard_baseline_reply_34"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/guideline_row_2"
            app:layout_constraintEnd_toEndOf="@id/guideline_column_1"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageButton
            android:id="@+id/action_distance"
            style="@style/KeyboardButtonIcon"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/ic_keyboard_baseline_6_ft_apart_34"

            app:layout_constraintStart_toStartOf="@id/guideline_column_1"
            app:layout_constraintTop_toTopOf="@id/guideline_row_2"
            app:layout_constraintEnd_toEndOf="@id/guideline_column_2"
            app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>